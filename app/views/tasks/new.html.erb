<h1> ADD YOUR TO DO TASKS </h1>

<%= form_with model: @task, local: true do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
    <p><%= @task.errors.full_messages_for(:title)[0] %></p>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
    <p><%= @task.errors.full_messages_for(:description)[0] %></p>
  </div>

  <div>
    <%= form.submit "Submit" %>
  </div>
<% end %>


<div>
  <%= link_to "Go To Index", root_path %>
</div>
