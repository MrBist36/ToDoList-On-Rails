<h1> To Do List </h1>

<table>
  <thead>
    <tr>
      <th> Title </th>
      <th> Description </th>
      <th> Show </th>
      <th> Edit </th>
      <th> Delete </th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td>
          <%= link_to 'Delete', task, data: {
            turbo_method: :delete, 
            turbo_confirm: "Are you sure?"
          } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div>
  <%= link_to "Add new Tasks", tasks_new_path %>
</div>
